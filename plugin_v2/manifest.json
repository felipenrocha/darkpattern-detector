{
    "manifest_version": 3,
    "name": "Dark Patterns Detector",
    "version": "0.0.1",
    "action": {
        "default_popup": "src/frontend/popup.html",
        "default_icon": "src/frontend/info-icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "src/background/index.js"
    },
    "permissions": [
        "scripting",
        "activeTab"
    ]
}